<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="90sp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/c7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c3"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/c4"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c5"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/c6"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnBonusCities">

            <!-- First row -->
            <Button
                android:id="@+id/btnNewYork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NYC"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:onClick="onCityButtonClicked"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSingapore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SGP"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:onClick="onCityButtonClicked"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnMumbai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BOM"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:onClick="onCityButtonClicked"
                android:padding="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnNewYork">

            <!-- Second row -->
            <Button
                android:id="@+id/btnDelhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DEL"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:onClick="onCityButtonClicked"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSydney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SYD"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:onClick="onCityButtonClicked"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnMelbourne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MEL"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:onClick="onCityButtonClicked"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>